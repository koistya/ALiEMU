{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts",
        "!node_modules/**"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "files": [
        "app/components/tests/App.test.ts",
        "temp/db.ts",
        "typings/bluebird/bluebird.d.ts",
        "typings/expect.js/expect.js.d.ts",
        "typings/faker/faker.d.ts",
        "typings/lodash/lodash.d.ts",
        "typings/mocha/mocha.d.ts",
        "typings/sequelize/sequelize.d.ts",
        "typings/tsd.d.ts",
        "typings/validator/validator.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "awesomeTypescriptLoaderOptions": {
        "library": "es6",
        "useBabel": true
    }
}
